<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TTServerMaker"
        xmlns:converters="clr-namespace:TTServerMaker.Converters"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:CustomControls="clr-namespace:TTServerMaker.CustomControls" 
        xmlns:Behaviours="clr-namespace:TTServerMaker.Behaviours" 
        x:Class="TTServerMaker.Windows.ServerSelectWindow"
        mc:Ignorable="d"
        xmlns:viewModels="clr-namespace:ServerEngine.ViewModels;assembly=ServerEngine"
        d:DataContext="{d:DesignInstance viewModels:SelectServerVM}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="TT Server Maker" Height="640" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">


    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="{StaticResource GradientBlue}" Offset="1"/>
            <GradientStop Color="{StaticResource GradientPink}"/>
        </LinearGradientBrush>
    </Window.Background>



    <Grid Margin="30">

        
        <Grid.RowDefinitions>
            <RowDefinition Height="81*" />
            <RowDefinition Height="442*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <materialDesign:DialogHost Identifier="AddEditDialog">
            <Label>Wadup</Label>
        </materialDesign:DialogHost>

        <ListView 
            
                Behaviours:ListViewBehaviour.AutoUnselectItem="True"
                SelectionMode="Single"
                ItemsSource="{Binding Servers}"
                SelectedItem="{Binding SelectedServerItem}"
                x:Name="ServerListBox" 
                ScrollViewer.VerticalScrollBarVisibility="Auto" Grid.RowSpan="2" Margin="0,0,0,48">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="#88FFFFFF"/>
                </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Stretch" Margin="14,0,0,0">

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                    Style="{StaticResource MaterialDesignTitleTextBlock}" 
                                    VerticalAlignment="Center"><Run Text="{Binding BasicInfo.Name}"/></TextBlock>
                            <TextBlock Grid.Row="1" Foreground="#FFA4A4A4" FontWeight="Medium"><Run Text="{Binding ServerTypeStr, Mode=OneWay}"/></TextBlock>


                            <StackPanel 
                                    Orientation="Horizontal"
                                    Grid.Column="1" 
                                    
                                    Grid.RowSpan="2"
                                    Style="{StaticResource VisibleAnimation}"
                                    Visibility="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Converter={StaticResource BooleanToHiddenConverter}}">
                                <materialDesign:PackIcon 
                                        Kind="Edit" 
                                        Width="30" 
                                        Height="30" 
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Right" 
                                        PreviewMouseUp="EditServerButton_MouseUp"
                                        Cursor="Hand"/>
                                <materialDesign:PackIcon
                                        Width="30" Height="30"
                                        Grid.RowSpan="2"
                                        Kind="DeleteSweep" 
                                        HorizontalAlignment="Right" 
                                        VerticalAlignment="Center" 
                                        Cursor="Hand"
                                        Margin="10,18" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <CustomControls:NonManualToggleButton 
                    x:Name="AddLoadButton"
                    Style="{StaticResource MaterialDesignActionAccentToggleButton}"
                    ToolTip="MaterialDesignFloatingActionAccentButton"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Grid.Row="1"
                    Width="70"
                    Height="70"
                    IsChecked="{Binding ElementName=ServerListBox, Path=SelectedIndex, Converter={StaticResource HasSelectedItemConverter}}"
                    materialDesign:ShadowAssist.ShadowDepth="Depth3"
                    Margin="0,0,28,13" Grid.RowSpan="2">
                <materialDesign:ToggleButtonAssist.OnContent>
                    <materialDesign:PackIcon Kind="OpenInNew" Height="30" Width="30" />
                </materialDesign:ToggleButtonAssist.OnContent>
                <materialDesign:PackIcon Kind="Add" Height="30" Width="30" />
            </CustomControls:NonManualToggleButton>
        </Grid>
</Window>
