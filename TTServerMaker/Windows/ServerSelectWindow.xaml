    <Grid Margin="14,10,14,24">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="354*"/>
            <RowDefinition Height="227*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0,0,0,2" BorderBrush="LightGray" Margin="10,0,10,0"/>

        <DockPanel>
            <TextBlock
            FontSize="20"
            Margin="10,10,0,23"
            Style="{StaticResource MaterialDesignTitleTextBlock}">
            My Servers
            </TextBlock>

            <Button
                Style="{StaticResource MaterialDesignToolButton}"
                Width="30"
                Padding="2 0 2 0"
                ToolTip="Settings"
                HorizontalAlignment="Right"
                Margin="0,0,10,10"
                materialDesign:RippleAssist.IsCentered="True">
                <materialDesign:PackIcon Kind="Settings" Width="23" Height="23" />
            </Button>
        </DockPanel>

        <ScrollViewer Grid.Row="1" 
                      Grid.RowSpan="2" 
                      VerticalScrollBarVisibility="Hidden" Margin="0,0,0,50" >


            <ItemsControl Name="ServerList" ItemsSource="{Binding Servers}"  Padding="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,0,0,20"  UniformCornerRadius="25"  Height="200" materialDesign:ShadowAssist.ShadowDepth="Depth3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="131"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.ColumnSpan="2" 
                                       VerticalAlignment="Center" Grid.Row="0"
                                       Source="{Binding BasicInfo.ServerImagePath}"
                                       Stretch="UniformToFill"/>
                                            <Button
                                                Click="LoadUpButton_Click"
                                                Grid.Row="0"
                                                ToolTip="Load up server"
                                                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                BorderBrush="Transparent"
                                                Width="46"
                                                Height="46"
                                                Margin="0,0,20,32" Grid.RowSpan="2" Grid.Column="1">
                                    <materialDesign:PackIcon Width="18" Height="18" Kind="Send" />
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0.9,0" EndPoint="0,1">
                                            <GradientStop Color="{StaticResource GradientBlue}" Offset="1.1"/>
                                            <GradientStop Color="{StaticResource GradientPink}"/>
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <StackPanel
                        Grid.Row="1"
                        Margin="10,10,0,0">
                                    <TextBlock FontSize="16"
                            Margin="2"><Run Text="{Binding BasicInfo.Name}"/></TextBlock>
                                    <TextBlock 
                                        Foreground="#B1B1B1"
                                        TextWrapping="Wrap"
                                        Margin="2"
                                        FontSize="15"
                                        VerticalAlignment="Center"><Run Text="{Binding ServerTypeStr, Mode=OneWay}"/></TextBlock>
                                </StackPanel>
                                <StackPanel
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    Margin="0,20,10,0">
                                    <Button
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Width="30"
                                        Padding="2 0 2 0"
                                        ToolTip="Edit Server"
                                        materialDesign:RippleAssist.IsCentered="True">
                                        <materialDesign:PackIcon Kind="Edit" />
                                    </Button>
                                    <Button
                                        ToolTip="Delete server"
                                        Style="{StaticResource MaterialDesignToolButton}"
                                        Width="30"
                                        Padding="2 0 2 0"
                                        materialDesign:RippleAssist.IsCentered="True">
                                        <materialDesign:PackIcon Kind="DeleteForever" />
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


        <Border BorderBrush="DarkGray" Grid.Row="2" Margin="0,100,0,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="Transparent"/>
                    <GradientStop Color="White" Offset="0.526"/>
                    <GradientStop Color="#D2FFFFFF" Offset="0.396"/>
                </LinearGradientBrush>
            </Border.Background>

            <Button Grid.Row="2"
                FontSize="16"
                Style="{StaticResource RoundPrimaryButton}" 
                    Height="45"
                    Margin="10,0,10,0"
                    VerticalAlignment="Bottom">
                + Add new server
            </Button>
        </Border>


