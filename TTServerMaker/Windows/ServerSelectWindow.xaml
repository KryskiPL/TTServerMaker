        <materialDesign:Card Grid.Row="1" Height="167" materialDesign:ShadowAssist.ShadowDepth="Depth3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Grid.ColumnSpan="2" VerticalAlignment="Center"
                    Source="pack://application:,,,/TTServerMaker;component/Img/vanilla_preview.jpg"
                    Stretch="UniformToFill"/>
                <Button
                    Grid.Row="0"
                    ToolTip="Load up server"
                    Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,10,47" Grid.RowSpan="2" Grid.Column="1">
                    <materialDesign:PackIcon Kind="Send" />
                </Button>
                <StackPanel
                    Grid.Row="1"
                    Margin="8 18 8 0">
                    <TextBlock
                        FontWeight="Bold"><Run Text="My First Server"/></TextBlock>
                    <TextBlock 
                        TextWrapping="Wrap"
                        VerticalAlignment="Center"><Run Text="Vanilla 1.12.1"/></TextBlock>
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Margin="5,20,10,10">
                    <Button
                        Style="{StaticResource MaterialDesignToolButton}"
                        Width="30"
                        Padding="2 0 2 0"
                        ToolTip="Edit Server"
                        materialDesign:RippleAssist.IsCentered="True">
                        <materialDesign:PackIcon Kind="Edit" />
                    </Button>
                    <Button
                        ToolTip="Delete server"
                        Style="{StaticResource MaterialDesignToolButton}"
                        Width="30"
                        Padding="2 0 2 0"
                        materialDesign:RippleAssist.IsCentered="True">
                        <materialDesign:PackIcon Kind="DeleteForever" />
                    </Button>
                </StackPanel>


            </Grid>
        </materialDesign:Card>

