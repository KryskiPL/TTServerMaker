<UserControl x:Class="TTServerMaker.CustomControls.Dialogs.HelpDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TTServerMaker.CustomControls.Dialogs"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             Height="Auto"
             MaxWidth="400"
             Background="White"
             d:DesignHeight="106.34" d:DesignWidth="400">
    <Grid Margin="20 30 20 20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="helpTextBlock" TextAlignment="Justify" TextWrapping="WrapWithOverflow">Help text sample</TextBlock>

        <Button Grid.Row="1" 
                Width="300" Margin="0 15 0 0" 
                Style="{StaticResource FlatGradientTextButton}" 
                Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
            OK
        </Button>
    </Grid>
</UserControl>
